<h1>New items<h2>

<%= form_for :item, url: items_path do |f| %>

  <p>
    <%= f.label :purchasername %><br>
    <%= f.text_field :purchasername %>
  </p>  
  
  <p>
    <%= f.label :itemdescription %><br>
    <%= f.text_field :itemdescription %>
  </p>

  <p>
    <%= f.label :itemprice %><br>
    <%= f.text_field :itemprice %>
  </p>
  
  <p>
    <%= f.label :purchasecount %><br>
    <%= f.text_field :purchasecount %>
  </p>  

  <p>
    <%= f.label :merchantname %><br>
    <%= f.text_field :merchantname %>
  </p> 

  <p>
    <%= f.label :merchantaddress %><br>
    <%= f.text_field :merchantaddress %>
  </p> 
    
  <p>
    <%= f.submit %>
  </p>
<% end %>  